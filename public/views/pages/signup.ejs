<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Signup</title>

  <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/images/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/images/favicon/favicon-16x16.png">
  <link rel="manifest" href="/images/favicon/site.webmanifest">
  <meta name="msapplication-TileImage" content="../assets/img/favicons/mstile-150x150.png">
  <meta name="theme-color" content="#ffffff">

  <script src="/js/bootstrapTest/config.navbar-vertical.js"></script>
  <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="">
  <link href="/lib/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet">
  <link href="/css/falcon/theme-dark.css" rel="stylesheet">
</head>


<body>

  <!-- ===============================================-->
  <!--    Main Content-->
  <!-- ===============================================-->
  <main class="main" id="top">
    <div class="container" data-layout="container">
      <div class="content">
        <div class="row flex-center min-vh-100 py-6">
          <div class="col-sm-10 col-md-8 col-lg-6 col-xl-6 col-xxl-4">
            <div class="d-flex justify-content-center align-items-center py-4">
              <img src="/images/sapphireLogo.png" class="mr-2" style="height: 20px; width: auto;">
            </div>
            <div class="card">
              <div class="card-body p-4 p-sm-5">
                <div class="row text-left justify-content-between align-items-center mb-2">
                  <div class="col-auto">
                    <h5>Signup</h5>
                  </div>
                  <div class="col-auto">
                    <p class="fs--1 text-600 mb-0">Have an account? <a href="/login">Login</a></p>
                  </div>
                </div>
                <form action="/signup" method="post" id='form'>
                  <div class="mb-1">
                    <input id='username' class="form-control" type="text" placeholder="Username" name="username"
                      required>
                  </div>
                  <div class="card mb-3">
                    <div class="card-body p-0 pl-2">
                      <p class="mb-0 fs--1">Username must be at least <b class="text-info"
                          id="usernameLengthValue">6</b> characters long</p>
                    </div>
                  </div>
                  <div class="mb-3"><input class="form-control" type="email" pattern="[^@]+@[^@]+\.[a-zA-Z]{2,6}" placeholder="Email address" name="email"
                      required></div>
                  <div class="row gx-3">
                    <div class="mb-1 col-sm-6"><input id='password' class="form-control" type="password"
                        placeholder="Password" name="password" required></div>
                    <div class="mb-1 col-sm-6"><input id='confirm-password' class="form-control" type="password"
                        placeholder="Confirm Password" required></div>
                  </div>
                  <div class="card mb-3">
                    <div class="card-body p-0 pl-2">
                      <p class="mb-0 fs--1">Password must be at least <b class="text-info"
                          id="passwordLengthValue">8</b> characters long and must contain an <b class="text-info"
                          id="passwordUpperCaseValue">Upper Case Letter</b> and a <b class="text-info"
                          id="passwordNumberValue">Number</b><span style="display: none;"
                          id="passwordsMustMatchInfo"><br>Confirm password and password <b id="passwordMatchValue">must
                            match</b></span></p>
                    </div>
                  </div>
                  <% if (errorMessage) { %>
                  <p class="fs--1 text-danger"><%= errorMessage %></p>
                  <% } %>
                  <div class="form-check"><input class="form-check-input" type="checkbox" id="remember-me"
                      name="rememberMe"><label class="form-label" for="remember-me">Remember Me</label></div>
                  <div class="mb-3"><button class="btn btn-primary btn-block mt-3" type="submit"
                      name="submit">Register</button></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- ===============================================-->
  <!--    End of Main Content-->
  <!-- ===============================================-->




  <!-- ===============================================-->
  <!--    JavaScripts-->
  <!-- ===============================================-->
  <script src="/js/falcon/jquery.min.js"></script>
  <script src="/js/falcon/popper.min.js"></script>
  <script src="/js/falcon/bootstrap.min.js"></script>
  <script src="/lib/@fortawesome/all.min.js"></script>
  <script src="/lib/stickyfilljs/stickyfill.min.js"></script>
  <script src="/lib/sticky-kit/sticky-kit.min.js"></script>
  <script src="/lib/is_js/is.min.js"></script>
  <script src="/lib/lodash/lodash.min.js"></script>
  <script src="/lib/perfect-scrollbar/perfect-scrollbar.js"></script>
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,500,600,700%7cPoppins:100,200,300,400,500,600,700,800,900&amp;display=swap"
    rel="stylesheet">
  <script src="/lib/echarts/echarts.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.6.15/browser-polyfill.min.js"></script>
  <script src="/lib/progressbar.js/progressbar.min.js"></script>
  <script src="/js/falcon/theme.js"></script>
</body>

</html>
